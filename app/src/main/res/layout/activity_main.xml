<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/enterYear" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:textAlignment="center" android:hint="@string/enter_your_year_of_birth"
            android:importantForAutofill="no"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/resultText" app:layout_constraintTop_toBottomOf="@+id/enterYear"
            android:layout_marginTop="72dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/findAgeBtn" app:layout_constraintVertical_bias="0.138"
            android:textSize="24sp" android:textAlignment="center" android:textStyle="bold"/>
    <Button
            android:text="@string/find_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/findAgeBtn" android:layout_marginBottom="168dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp" android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" android:onClick="findAgeBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>